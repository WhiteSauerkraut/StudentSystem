<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.lyj.service.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DepartmentServlet</servlet-name>
        <servlet-class>com.lyj.service.DepartmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepartmentServlet</servlet-name>
        <url-pattern>/department</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>TeachingCourseServlet</servlet-name>
        <servlet-class>com.lyj.service.TeachingCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TeachingCourseServlet</servlet-name>
        <url-pattern>/teaching_course</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentServlet</servlet-name>
        <servlet-class>com.lyj.service.StudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/student</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>com.lyj.service.LogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/log</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChooseCourseServlet</servlet-name>
        <servlet-class>com.lyj.service.ChooseCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChooseCourseServlet</servlet-name>
        <url-pattern>/choose_course</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StuChooseCourseServlet</servlet-name>
        <servlet-class>com.lyj.service.StuChooseCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StuChooseCourseServlet</servlet-name>
        <url-pattern>/choose_course_result</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StuRevisedCourseServlet</servlet-name>
        <servlet-class>com.lyj.service.StuRevisedCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StuRevisedCourseServlet</servlet-name>
        <url-pattern>/revised_course_result</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.lyj.service.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CloseServlet</servlet-name>
        <servlet-class>com.lyj.service.CloseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CloseServlet</servlet-name>
        <url-pattern>/close</url-pattern>
    </servlet-mapping>
</web-app>